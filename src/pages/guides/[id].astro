---
import MainLayout from "../../layouts/MainLayout.astro";
import GuideDetailPage from "../../components/guides/GuideDetailPage";

// Pobierz parametr ID z URL
const { id } = Astro.params;

// Sprawdź czy ID jest prawidłowe (uproszczona walidacja)
const isValidId = typeof id === "string" && id.length > 0;

// Jeśli ID jest nieprawidłowe, przekieruj na stronę 404
if (!isValidId) {
  return Astro.redirect("/404");
}
---

<MainLayout title="Szczegóły przewodnika">
  <GuideDetailPage client:load id={id} />
</MainLayout>
