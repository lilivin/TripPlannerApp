---
import "../styles/global.css";
import AuthButton from "../components/auth/AuthButton";

interface Props {
  title?: string;
}

const { title = "TripPlannerApp - Plan Your Trip" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="theme-color" content="#0f172a" />
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen">
    <div class="min-h-screen flex flex-col">
      <header class="bg-white dark:bg-gray-800 shadow">
        <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
          <a href="/" class="flex items-center">
            <img src="/logo.png" class="h-8 mr-2" alt="TripPlannerApp Logo" />
            <span class="text-xl font-bold text-gray-900 dark:text-white">TripPlannerApp</span>
          </a>
          <div class="flex items-center space-x-4">
            <a href="/guides" class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">
              Guides
            </a>
            <!-- Auth button as a separate React island -->
            <div class="auth-button-container min-w-[100px] inline-flex">
              <AuthButton client:load />
            </div>
          </div>
        </nav>
      </header>

      <main class="container mx-auto px-4 py-8 flex-grow">
        <slot />
      </main>

      <footer class="bg-white dark:bg-gray-800 py-4 shadow-inner">
        <div class="container mx-auto px-4 text-center text-sm text-gray-600 dark:text-gray-400">
          <p>&copy; {new Date().getFullYear()} TripPlannerApp. All rights reserved.</p>
          <div class="mt-2">
            <a href="/terms" class="text-indigo-600 dark:text-indigo-400 hover:underline"> Terms of Service </a>
            <span class="mx-2">â€¢</span>
            <a href="/privacy" class="text-indigo-600 dark:text-indigo-400 hover:underline"> Privacy Policy </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
